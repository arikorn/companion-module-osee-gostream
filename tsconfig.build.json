{
	"extends": "@companion-module/tools/tsconfig/node18/recommended",
	"compilerOptions": {
		"outDir": "./dist",
		"baseUrl": "./",
		"paths": {
			"*": ["./node_modules/*"]
		},
		"noImplicitAny": false,
		"module": "commonjs",
		"esModuleInterop": true,
		"moduleDetection": "force"
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules/**", "*~", "src/**/__tests__/*"]
}
